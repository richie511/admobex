<?xml version="1.0" encoding="UTF-8"?>

<!-- config.xml reference: https://build.phonegap.com/docs/config-xml -->
<widget xmlns     = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        id        = "com.richie511.admobex"
        version   = "1.0.0">

    <name>Tes Admob</name>

    <description>
        Tes Admob
    </description>

    <author href="http://konsultanprogram.com" email="yugya.17@gmail.com">
        Tes Admob
    </author>
	<content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="~1.3.1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="android" spec="~6.1.0" />
    <engine name="ios" spec="~4.3.1" />
    <plugin name="cordova-plugin-admob-free" spec="../.." />
<plugin name="cordova-admob-inmobi" spec="~0.0.0" />

</widget>
